{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "A basic boilerplate for React and Node",
  "main": "index.js",
  "scripts": {
    "prestart": "yarn start:pm2",
    "start:pm2": "./node_modules/.bin/pm2 startOrReload src/server/ecosystem.json",
    "start": "cross-env NODE_ENV=dev webpack-dev-server --open",
    "prebuild": "./node_modules/.bin/pm2 stop src/server/ecosystem.json",
    "build": "webpack -p --progress --colors",
    "serve": "./node_modules/.bin/pm2 startOrReload src/server/ecosystem.json && yarn logs",
    "serve:docker": "./node_modules/.bin/pm2 startOrReload server/docker-ecosystem.json && yarn logs",
    "logs": "./node_modules/.bin/pm2 logs",
    "lint:client": "eslint --ext .js --ext .jsx ./src/client/",
    "lint:test": "eslint --ext .js --ext .jsx ./test/unit/",
    "lint": "npm run lint:client && npm run lint:test",
    "pretest": "rimraf coverage && npm run lint",
    "test": "cross-env NODE_ENV=test NODE_PATH=./src/client nyc --reporter=html --reporter=text mocha",
    "test:watch": "yarn test; chokidar './src/client/**/*.{js,jsx}' './test/unit/**/*.{js,jsx}' -c 'yarn test'",
    "selenium": "selenium-standalone install --config=./selenium.config.js",
    "prefeaturetest": "rimraf reports/* & rimraf logs/selenium-debug.log && yarn selenium",
    "featuretest": "nightwatch",
    "postfeaturetest": "node html-cucumber-reports.js",
    "pm2:update": "pm2 update"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adarshannaiynar/urban_general"
  },
  "author": "Adarsh",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "lodash": "^4.17.4",
    "pm2": "^2.6.1",
    "pug": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-object-rest-spread": "^0.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.0",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^0.28.4",
    "cucumber": "^3.0.2",
    "cucumber-html-reporter": "^3.0.1",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "es6-promise": "^4.1.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "history": "^4.6.3",
    "mocha": "^4.0.1",
    "nightwatch": "^0.9.16",
    "nightwatch-cucumber": "^8.1.0",
    "node-sass": "^4.5.3",
    "nyc": "^11.1.0",
    "postcss": "^6.0.8",
    "postcss-loader": "^2.0.6",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.0.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.2",
    "react-test-renderer": "^16.0.0",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.2.3",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "selenium-standalone": "^6.7.0",
    "sinon": "^4.1.1",
    "style-loader": "^0.19.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  }
}
