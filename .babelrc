{
	"presets": [
		"react",
		"env",
		"stage-0",
		"stage-1",
		"stage-2"
	],
	"plugins": [
		"react-hot-loader/babel",
		"transform-object-rest-spread",
		"transform-class-properties",
		"transform-runtime"
	],
	"env": {
		"test": {
			"plugins": [
				[
					"istanbul",
					{
						"exclude": [
							"test/unit/**/*.js",
							"test/unit/**/*.jsx"
						]
					}
				]
			]
		}
	}
}